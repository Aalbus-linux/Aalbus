BUILTIN_PKG.curses=             yes
IS_BUILTIN.curses=              yes
USE_BUILTIN.curses=             yes
HAVE_HEADER.curses_h=           1

CHECK_BUILTIN.gettext=          yes
IS_BUILTIN.gettext=             yes

