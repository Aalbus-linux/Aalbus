
########### ignore annoying dependencies #########
TOOLS_IGNORE.groff=		yes			#we use neatroff
TOOLS_IGNORE.gettext-tools=	yes			#we use gettext-tiny
TOOLS_IGNORE.gettext-lib=	yes			#we use gettext-tiny
TOOLS_IGNORE.libtool-base=	yes			#we use slibtool
TOOLS_IGNORE.coreutils=		yes			#we have a custom unix-like userland
TOOLS_IGNORE.bison=		yes			#we want to use byacc
TOOLS_IGNORE.gtexinfo=		yes

############ set use native ####################
BUILTIN_PKG+=	curses iconv libiconv gettext gettext-lib

