#Settings related to the compiler in pkgsrc


MKGCC=			no
MKLLVM=			yes
HAVE_LLVM=		yes
PKGSRC_COMPILER=        clang
PKG_CC=                 clang
PKG_CXX=                clang++
PKG_FORTRAN=		flang
CLANGBASE=              /usr


DBG=                    # prevent DBG from adding default optimizer flags

PKGSRC_MKPIE=           yes

GCC_USE_NATIVE=		yes
USE_BUILTIN.dl=         yes

BUILDLINK_PREFIX.perl	=/usr

